[alias]
    br = !git checkout master && git pull && git checkout -b "$1"
    babysit = !git-babysit
[push]
    default = simple
[user]
    name = Paul Harper
    email = paul@chartio.com
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = vimdiff
[mergetool]
    prompt = false
[core]
    editor = "/usr/bin/env nvim"

# This belongs at the end
[include]
    path = "~/.gitconfig.local"
[grep]
	patternType = extended
